<div class="row mt-4">
  <div class="col-md-6">
    <h3>Edit Post:</h3>
    <form class="form edit-post-form">
      <div class="form-group">
        <label for="post-name">Title:</label>
        <input class="form-control form-input" type="text" id="post-title" name="post-title" value="{{post.title}}" />
      </div>
      <div class="form-group">
        <label for="post-content">Content:</label>
        <textarea class="form-control form-input" id="post-content" name="post-content">{{post.content}}</textarea>
      </div>
      <div class="form-group">
        <button type="submit" class="delete-btn btn btn-primary">Update</button>
        <input type="hidden" id="post-id" value="{{post.id}}"/>
      </div>
    </form>
  </div>
</div>

 <!--run edit script-->
<script src="/js/edit.js"></script>